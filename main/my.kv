<intro>:
    rows: 1
    padding: 75
    FloatLayout:
        size_hint
        multiline: True
        font_size: 75
        pos_hint: {'centre_x': 0.5, 'centre_y': 0.5}
        text: 'ПРИВЕТ!'
    
<Container>:
    rows: 2
    padding: 50
    task: text_input

    TextInput:
        id: text_input
        size_hint: 1, 0.1
        multiline: False
        font_size: 30
    FloatLayout:
        Button:
            size_hint:1, 0.1
            pos_hint:{'centre_x': 0.5, 'y':0.85}
            text:'ДОБАВИТЬ ЗАДАЧУ'

            on_release:
                root.add_task()
